# Build optimization configuration
# This file helps reduce the build size for shared hosting deployment

# Remove development dependencies from production build
EXCLUDE_DEV_DEPS=true

# Optimize images and assets
OPTIMIZE_IMAGES=true
IMAGE_QUALITY=75
IMAGE_FORMATS=webp,jpg

# Enable compression
ENABLE_GZIP=true
ENABLE_BROTLI=false

# Bundle optimization
TREE_SHAKING=true
MINIFY_CSS=true
MINIFY_JS=true

# Remove source maps in production
GENERATE_SOURCEMAP=false

# Disable telemetry
NEXT_TELEMETRY_DISABLED=1

# PWA optimization
PWA_CACHE_SIZE_LIMIT=50MB
PWA_OFFLINE_FALLBACK=true

# Font optimization
OPTIMIZE_FONTS=true
PRELOAD_FONTS=false

# Code splitting
ENABLE_CODE_SPLITTING=true
CHUNK_SIZE_LIMIT=100KB

# Remove unused CSS
PURGE_CSS=true

# Asset optimization
OPTIMIZE_SVG=true
INLINE_SMALL_ASSETS=true
ASSET_SIZE_LIMIT=10KB
